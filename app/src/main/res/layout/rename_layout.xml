<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <com.app.musicplayer.Custom.FontTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        custom:fontName="SourceSansPro-Regular.otf"
        android:textColor="@color/white"
        android:text="@string/song_details"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:background="@color/teal"
        android:paddingLeft = "10dp"
        android:paddingRight = "10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/song_title"
        android:id = "@+id/title_textbox"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/song_artist"
        android:id = "@+id/artist_textbox"
        />

</LinearLayout>