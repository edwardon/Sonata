<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.app.musicplayer.Custom.FontTextView
        xmlns:custom= "http://schemas.android.com/apk/res-auto"
        custom:fontName="SourceSansPro-Regular.otf"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:textSize="20sp"
        android:paddingBottom="2dp"
        android:textColor="#616161"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Playlists"
        android:id="@+id/playlist_title_textview"
        android:gravity="bottom"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
       >
        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/add_playlist_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="36dp"
            android:layout_marginRight="36dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_white_24dp"
            fab:fab_colorNormal="@color/teal"
            fab:fab_colorPressed="@color/primaryDark"
            fab:fab_colorRipple="@color/dark_grey" />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/playlist_listview"
            android:layout_gravity="center_horizontal" />
    </RelativeLayout>
</LinearLayout>